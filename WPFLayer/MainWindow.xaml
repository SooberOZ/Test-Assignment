<Window x:Class="WPFLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,28">
        </StackPanel>
        <Frame x:Name="MainFrame" Margin="0,37,0,0" Grid.RowSpan="2" />
        <Button Content="Go to Popular Currencies" HorizontalAlignment="Left" Height="33" Margin="26,4,0,0" VerticalAlignment="Top" Width="205" Click="Button_Click"/>
        <Button Content="Find Currency" HorizontalAlignment="Center" VerticalAlignment="Center" Height="37" Width="223" Click="Button_Click_1"/>
    </Grid>
</Window>