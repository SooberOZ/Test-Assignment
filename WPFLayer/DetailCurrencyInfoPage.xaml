<Page x:Class="WPFLayer.DetailCurrencyInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFLayer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetailCurrencyInfoPage">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Currency Name:" FontWeight="Bold"/>
            <TextBox x:Name="CurrencySymbolTextBox" Margin="5"/>
            <Button Content="Find Currency" Click="Button_Click" Margin="5"/>
            <TextBlock Text="Name:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock x:Name="NameLabel" Margin="5"/>

            <TextBlock Text="Symbol:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock x:Name="SymbolLabel" Margin="5"/>

            <TextBlock Text="Current Price:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock x:Name="PriceLabel" Margin="5"/>

            <TextBlock Text="Market Links:" />
            <TextBlock x:Name="MarketLinks" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
